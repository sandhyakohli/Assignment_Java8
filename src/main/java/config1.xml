<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans      
               http://www.springframework.org/schema/beans/spring-beans-3.2.xsd   
               http://www.springframework.org/schema/context       
               http://www.springframework.org/schema/context/spring-context-3.2.xsd"
       xmlns:context="http://www.springframework.org/schema/context">
       
       <bean class="com.pojo.Question1" id="q">
       <constructor-arg name="q_ID" value="1" ></constructor-arg>
       <constructor-arg name="q_name" value=" Which of the following stands true for spring beans?"></constructor-arg>
       <constructor-arg>
       <list>
       <ref bean="ans1"></ref>
       <ref bean="ans2"></ref>
       </list>
       </constructor-arg>
       </bean>
       
       <bean class="com.pojo.Answer1" id="ans1">
       <constructor-arg name="a_ID" value="1" ></constructor-arg>
       <constructor-arg name="answer" value="Spring beans are managed by the Spring IoC container."></constructor-arg>
       <constructor-arg name="a_by" value="Sandhya"></constructor-arg>
       </bean>
       
        <bean class="com.pojo.Answer1" id="ans2">
       <constructor-arg name="a_ID" value="2" ></constructor-arg>
       <constructor-arg name="answer" value="Spring beans are instantiated, assembled, and otherwise managed by a Spring IoC container."></constructor-arg>
       <constructor-arg name="a_by" value="Priyanka"></constructor-arg>
       </bean>
</beans>